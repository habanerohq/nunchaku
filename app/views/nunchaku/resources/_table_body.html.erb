<tbody
  <% if association_chain.any? %>
    chain="<%= polymorphic_path association_chain %>"
  <% end %>
>
  <%=
    render :partial => 'table_row',
           :collection => collection,
           :as => :resource,
           :locals => {
             :resource_class => resource_class,
             :column_names => column_names
           }
  %>
</tbody>
